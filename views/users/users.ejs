<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login To Vidhya</title>
    <link rel="stylesheet" href="/loginStyles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Gupter:wght@400;500;700&family=Playwrite+AR:wght@100..400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .alignment {
        margin-top: 140px;
        margin-left: 160px;
        margin-right: 160px;
        height: 460px;
        /* border: 1px solid black; */
        display: flex;
        justify-content: space-evenly;
      }
      .customizeHero {
        height: 460px;
        width: 560px;
        /* border: 1px solid black; */
      }
      .btn-search {
        background-color: #fe424d;
        color: white;
        font-weight: bold;
        border-radius: 25px;
        padding: 0rem 1rem 0rem 1rem;
      }
      .btn-search:hover {
        background-color: #fe424d;
        color: white;
        font-weight: bold;
      }
      .btn-search i {
        display: inline;
        margin-right: 5px;
      }
      .search-inp {
        border-radius: 25px;
        padding: 0.5rem 3rem 0.5rem 3rem;
        border: 1.2px solid grey;
      }
      .nav-link:hover {
        color: #f34235 !important;
        text-decoration: none;
      }
      .divider {
        width: 0.5px; /* Adjust the width for vertical line */
        height: 100%; /* Full height of the container */
        background-color: rgb(74, 73, 73); /* Line color */
      }
      .row {
        width: 560px;
        align-items: center;
      }
      .form-control {
        width: 350px;
      }
      .textt {
        display: flex;
        width: 350px;
        justify-content: space-around;
        margin-left: 85px;
        font-family: "Archivo", sans-serif;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
      <div class="container-fluid">
        <div class="logo-main">
          <a class="navbar-brand" href="/listings"
            ><i
              class="fa-solid fa-book-open"
              style="color: black; font-size: 1.7rem"
            ></i>
            &nbsp;
            <p
              style="
                font-size: 1.7rem;
                color: #f34235;
                font-weight: 600;
                display: inline;
              "
            >
              Vidha Balam
            </p></a
          >
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav ms-auto">
            <form class="d-flex" role="search">
              <input
                class="form-control me-2 search-inp"
                type="search"
                placeholder="Search Examination"
                aria-label="Search"
              />
              <button class="btn btn-search" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>Search
              </button>
            </form>
          </div>

          <div class="navbar-nav ms-auto">
            <!-- <b><a class="nav-link" href="/listings">Explore</a> </b> -->
            <b><a class="nav-link" href="/listings/new">Add New Listing</a></b>
            <% if(!currUser){ %>
            <b><a class="nav-link" href="/login">LogIn</a></b>
            <b><a class="nav-link" href="/signup">SignUp</a></b>
            <%}%> <% if(currUser){ %>
            <b><a class="nav-link" href="/logout">LogOut</a></b>
            <%}%>
          </div>
        </div>
      </div>
    </nav>

    <div class="alignment">
      <div class="heroImg">
        <img
          src="/images/signUpHero.png"
          alt="Description of the image"
          class="customizeHero"
        />
      </div>

      <div class="divider"></div>

      <div class="row">
        <h1 class="col-6 offset-4" style="color: #f34235">
          <b>Sign Up with ExploreInn!</b>
        </h1>
        <div class="col-6 offset-3">
          <form
            action="/signup"
            method="post"
            novalidate
            class="needs-validation"
          >
            <div class="mb-3">
              <label for="username" class="form-label"><b>Username</b></label>
              <input
                name="username"
                id="username"
                type="text"
                class="form-control"
                required
              />
              <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label"><b>Email</b></label>
              <input
                name="email"
                id="email"
                type="email"
                class="form-control"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label"><b>Password</b></label>
              <input
                name="password"
                id="password"
                type="password"
                class="form-control"
                required
              />
              <div class="valid-feedback">Looks Good</div>
              <div class="invalid-feedback">Password required!</div>
            </div>
            <button class="btn btn-success">SIGN UP!</button>
          </form>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
